                </tr>
            </thead>
            <tbody>
                <% @implements.each do |implement| %>
                 <tr>
                    <td><%= implement.id %></td>
                    <td><%= implement.machine.model.name %></td>
                    <td><%= implement.brand %></td>
                    <td><%= implement.name %></td>                    
                    <td><%= implement.model %></td>
                    <td><%= implement.oper_time %></td>
                    <td><%= implement.coef_cccr%></td>                   
                    <td><%= implement.year %></td>
                    <td><%= number_with_precision(implement.price, :precision => 0, :delimiter => '.') %></td>
                  </tr>
                <% end %>
             </tbody>
         </table>
     </div>
 </div>
 <input type="hidden" id="controller" value="<%=controller_name%>">