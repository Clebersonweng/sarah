<div class="panel-body">
    <div class="table-responsive">
        <table data-toggle="table" data-url="implement"  data-show-refresh="true" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-pagination="true" data-sort-name="name" data-sort-order="desc">
            <thead>
                <tr>
                    <th data-field="name">Implemento</th> 
                    <th data-field="brand">Marca</th> 
                    <th data-field="model">Modelo</th>
                    <th data-field="oper_time">Tiempo Operativo</th>
                    <th data-field="coef_cccr">Coeficiente de Mantenimiento</th>
                    <th data-field="machine">Máquina</th>
                    <th data-field="year">Año</th>
                    <th data-field="price">Precio</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                <% @implements.each do |implement| %>
                 <tr>
                     <td><%= implement.id %></td>
                     <td><%= implement.name %></td>
                     <td><%= implement.brand %></td>
                     <td><%= implement.model %></td>
                     <td><%= implement.oper_time %></td>
                     <td><%= implement.coef_cccr%></td>
                     <td><%= implement.machine.model.name %></td>
                     <td><%= implement.year %></td>
                     <td><%= number_with_precision(implement.price, :precision => 0, :delimiter => '.') %></td>

                     <td class="text-right data-icons">                     
                         <%= link_to edit_implement_path(implement), class: "btn btn-primary btn-sm" do %>
                           <i class="fa fa-1x fa-pencil"></i>
                          <% end %>   
                          <a type="button" class="btn btn-primary delete btn-sm" data-toggle="modal" data-id="<%= implement.id %>"><i class="fa fa-1x fa-trash"></i></a>                       
                      </td>
                  </tr>
                 <% end %>
             </tbody>
         </table>
     </div>
 </div>
 <input type="hidden" id="controller" value="<%=controller_name%>">