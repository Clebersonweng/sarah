<div class="container">
    <div class="row">
        <div id="myModal" class="modal fade" tabindex="-1" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">×</button>
                        <h3>Cálculo Tiempo Operativo</h3>
                    </div>
                    <div class="modal-body">
                        <div class="modal-body">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label class="control-label col-sm-3 col-sm-offset-1">Ancho de la Máquina(m)</label>
                                    <div class="col-sm-5">
                                        <input id ="width" class="form-control numbers" max="50"/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-3 col-sm-offset-1">Velocidad de Trabajo(km/h)</label>
                                    <div class="col-sm-5">
                                        <input id="velocity" class="form-control numbers" max="50"/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-3 col-sm-offset-1">m/km</label>
                                    <div class="col-sm-5">
                                        <input id="velocity" class="form-control" value="1000" readonly="true"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-danger" type="reset" id="exit" data-dismiss="modal">Salir</button>
                        <button class="btn btn-success" data-dismiss="modal">Cargar</button>                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>  
