<div class="container">
    <div class="row">
        <div id="md_ctt" class="modal fade" tabindex="-1" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">×</button>
                        <h3>Calcular Capacidad Total de Trabajo</h3>
                    </div>
                    <div class="modal-body">
                        <div class="modal-body">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label class="control-label col-sm-4 col-md-4">Ancho de la máquina :</label>
                                    <div class="col-sm-5  col-md-5">
                                        <input id ="width_machine" class="form-control replace_comma" maxlength="5" required/>
                                        <span class="help-block"></span>   

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-4 col-md-4">Velocidad de trabajo :</label>
                                    <div class="col-sm-5 col-md-5">
                                        <input id="work_velocity" class="form-control replace_comma" maxlength="5" required/>
                                        <span class="help-block"></span>   
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-danger" type="reset" id="exit" data-dismiss="modal">Salir</button>
                        <button class="btn btn-success" data-dismiss="modal" id="save_ctt_machine">Ok</button                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>  
