<p id="notice"><%= notice %></p>

<h1>Type Of Works</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price hours</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @type_of_works.each do |type_of_work| %>
      <tr>
        <td><%= type_of_work.name %></td>
        <td><%= type_of_work.price_hours %></td>
        <td><%= type_of_work.description %></td>
        <td><%= link_to 'Show', type_of_work %></td>
        <td><%= link_to 'Edit', edit_type_of_work_path(type_of_work) %></td>
        <td><%= link_to 'Destroy', type_of_work, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

