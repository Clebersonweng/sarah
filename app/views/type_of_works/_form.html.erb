<%= form_for(@type_of_work,html: {class: 'form-horizontal',id:'form_type_of_works', remote:true,"data-type": "json",'data-model' => 'type_of_work'}) do |f| %>
   <div class="col-xs-12 col-lg-8 col-sm-12">
      <div class="form-group">  
         <%= f.label :name,"Nombre :",class: "control-label col-sm-3" %>
         <div class="col-xs-12 col-md-12 col-sm-12 col-lg-4">
            <%= f.text_field :name,autofocus: true , class: "form-control", :maxlength => "50"%>
            <div class="help-block  with-errors"> <%= f.object.errors[:name].to_sentence if f.object.errors[:name] %></div>
         </div>
      </div>
      <div class="form-group">  
         <%= f.label :price_hours,"Precio por hora :",class: "control-label col-sm-3" %>
         <div class="col-xs-12 col-md-12 col-sm-12 col-lg-6">
            <%= f.text_field :price_hours,autofocus: true , class: "form-control ", onkeyup: "this.value=this.value.toUpperCase()", :maxlength => "20", :required => true %>
            <div class="help-block  with-errors"> <%= f.object.errors[:price_hours].to_sentence if f.object.errors[:price_hours] %></div>
         </div>
      </div>
      <div class="form-group">  
         <%= f.label :description, "DescripciÃ³n :",class: "control-label col-sm-3"  %>
         <div class="col-xs-12 col-md-12 col-sm-12 col-lg-8">   
            <%= f.text_area :description,autofocus: true , class: "form-control"%>
            <div class="help-block  with-errors"> <%= f.object.errors[:description].to_sentence if f.object.errors[:description] %></div>
         </div>
      </div>
   </div>
   <input type="hidden" id="controller" value="<%= controller_name%>">
<% end %>

