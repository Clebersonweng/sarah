     <ul>

     </ul>
 </div>
<% end %>
<div class="panel-body">
    <%=@titulo%>
    <%=form_for @product,url: products_path,:html => { role: :form, 'data-model' => 'product', class: 'form-horizontal',id: "form_products",remote: true} do |f| %>
      <div class="col-lg-8 col-xs-12 col-sm-6">

          <div class="form-group">                   
              <%= f.label :maker,"Marca",class: "control-label col-sm-2" %>
               <div class="col-xs-12 col-md-12 col-sm-12 col-lg-10">
                   <%= f.text_field :maker,  autofocus: true , class: "form-control"  %>
                    <span class="help-block"> <%= f.object.errors[:maker].to_sentence if f.object.errors[:maker] %></span>
                </div> 
            </div>       

            <div class="form-group">                   
                <%= f.label :tradename,"Nombre comercial",class: "control-label col-sm-2"%>
                 <div class="col-xs-12 col-md-12 col-sm-12 col-lg-10">
                     <%= f.text_field :tradename, class: "form-control" ,:required => true %> 
                      <span class="help-block"> <%= f.object.errors[:tradename].to_sentence if f.object.errors[:tradename] %></span>
                  </div> 
              </div>

              <div class="form-group">                   
                  <%= f.label :price,"Precio",class: "control-label col-sm-2" %>
                   <div class="col-xs-12 col-md-12 col-sm-12 col-lg-10">
                       <%= f.text_field :price, {:required => true,class: "form-control numbers"}  %> 
                        <span class="help-block"> <%= f.object.errors[:price].to_sentence if f.object.errors[:price] %></span>
                    </div> 
                </div>

                <div class="form-group">                   
                    <%= f.label :unit_of_measurement_id,"U.M",class: "control-label col-sm-2" %>
                     <div class="col-xs-12 col-md-12 col-sm-12 col-lg-10">
                         <%= f.select :unit_of_measurement_id,options_for_select(@unit_of_measurement, :selected => f.object.unit_of_measurement_id), {}, { :class => 'form-control', :required => true }%>
                         <span class="help-block"> <%= f.object.errors[:unit_of_measurement_id].to_sentence if f.object.errors[:unit_of_measurement_id] %></span>
                     </div> 
                 </div>

                 <div class="form-group">                   
                     <%= f.label :dosage,"Dosis",class: "control-label col-sm-2 " %>
                      <div class="col-xs-12 col-md-12 col-sm-12 col-lg-10">
                          <%= f.text_field :dosage, class: "form-control numbers",:required => true  %>   
                           <span class="help-block"> <%= f.object.errors[:dosage].to_sentence if f.object.errors[:dosage] %></span>
                       </div> 
                   </div>

                   <div class="form-group">                   
                       <%= f.label :cost_per_hectare,"Costo por hectarea",class: "control-label col-sm-2" %>
                        <div class="col-xs-12 col-md-12 col-sm-12 col-lg-10">
                            <%= f.text_field :cost_per_hectare, class: "form-control numbers",:required => true,  :readonly =>"readonly" %>   
                             <span class="help-block"> <%= f.object.errors[:cost_per_hectare].to_sentence if f.object.errors[:cost_per_hectare] %></span>
                         </div> 
                     </div>

                     <div class="form-group">                   
                         <%= f.label :description,"DescripciÃ³n",class: "control-label col-sm-2" %>
                          <div class="col-xs-12 col-md-12 col-sm-12 col-lg-10">
                              <%= f.text_area :description, class: "form-control" %> 
                               <span class="help-block"> <%= f.object.errors[:description].to_sentence if f.object.errors[:description] %></span>
                           </div> 
                       </div>

                      <%= render('layouts/error_lists')%>
          
                       <div class="control-group">
                           <div class="text-center">                                                              
                               <% if controller.action_name == "edit" ||  controller.action_name == "update" %>
                                <%= link_to "../../products", :controller => "products", :action => "index", :type => "button", :class =>"btn btn-danger" do  %>                              
                                 Cancelar                       
                                <%end%>  
                               <%else%>
                                <button type="reset" id="btn_cancel" class="btn btn-danger btn-space" >Cancelar</button>
                               <% end%>
                               <% if controller.action_name == "new"  ||  controller.action_name == "create"%>
                                <button type="submit" id="btn_submit_products"  class="btn btn-success">Guardar</button>
                               <%else%>
                                <button type="submit" id="btn_submit_products" class="btn btn-success btn_submit">Actualizar</button>
                               <% end%>                           
                           </div>
                       </div>
                       <input type="hidden" id="controller" value="<%= controller_name%>">
                      <% end %>

                  </div>
              </div>
