
<% if product.errors.any? %>
 <div id="error_explanation">
     <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

     <ul>
         <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
         <% end %>
     </ul>
 </div>
<% end %>
<div class="panel-body">
    <%=form_for @product, url: products_path,:html => { class: 'form-horizontal' } do |f| %>
      <div class="col-lg-6 col-xs-12 col-sm-6">
          <div class="form-group">                   
              <%= f.label :maker,class: "control-label col-sm-2 col-sm-offset-1" %>
               <div class="col-sm-4">
                   <%= f.text_field :maker,  autofocus: true , class: "form-control" %>
                </div> 
            </div>
            <div class="form-group">                   
                <%= f.label :unit_of_measurement_id,class: "control-label col-sm-2 col-sm-offset-1" %>
                 <div class="col-sm-4">
                     <%= f.select(:unit_of_measurement_id, options_for_select(@unit_of_measurement, :selected => f.object.unit_of_measurement_id),:class => "form-control", :include_blank => true) %>
                 </div> 
             </div>
             <div class="form-group">                   
                 <%= f.label :tradename,class: "control-label col-sm-2 col-sm-offset-1" %>
                  <div class="col-sm-4">
                      <%= f.text_field :tradename, class: "form-control" %> 
                   </div> 
               </div>
               <div class="form-group">                   
                   <%= f.label :price,class: "control-label col-sm-2 col-sm-offset-1" %>
                    <div class="col-sm-4">
                        <%= f.text_field :price, class: "form-control" %>   
                     </div> 
                 </div>

                 <div class="form-group">                   
                     <%= f.label :dosage,class: "control-label col-sm-2 col-sm-offset-1" %>
                      <div class="col-sm-4">
                          <%= f.text_field :dosage, class: "form-control" %>   
                       </div> 
                   </div>
                   <div class="form-group">                   
                       <%= f.label :cost_per_hectare,class: "control-label col-sm-2 col-sm-offset-1" %>
                        <div class="col-sm-4">
                            <%= f.text_field :cost_per_hectare, class: "form-control" %>   
                         </div> 
                     </div>
                     <div class="form-group">                   
                         <%= f.label :description,class: "control-label col-sm-2 col-sm-offset-1" %>
                          <div class="col-sm-4">
                              <%= f.text_area :description, class: "form-control" %>  
                           </div> 
                       </div>
                       <div class="control-group col-sm-offset-3">

                           <div class="controls">                                             
                               <button type="reset" class="btn btn-danger">Cancel</button>
                               <button type="submit" class="btn btn-primary">Save</button>
                           </div>

                       </div>
                      <% end %>

                  </div>
              </div>
