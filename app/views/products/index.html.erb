<div class="panel-body">
    <div class="table-responsive">
        <table 
            data-width="100%"  
                data-flat="true"
                data-response-handler="flatJSON"
                data-search="true"                
                class="table  table-hover table-striped table-condensed display" 
                data-toggle="table"
                data-show-toggle="true"                
                data-show-refresh="false" 
                data-pagination="true" 
                onlyInfoPagination="false" 
                data-icons="icons" data-sort-name="code" data-sort-order="desc" 
                data-card-view="false">
            <thead>
                <tr>
                    <th data-visible="false" data-field="id">Id</th>
                    <th data-field="tradename">Nombre comercial</th>
                    <th data-field="maker" >Marca</th> 
                    <th data-field="unit_of_measurement" >U.M</th>                    
                    <th data-field="price"> Precio</th>
                    <th data-field="dosage" >Dosis</th>
                    <th data-field="cost_per_hectare" >Costo por ha</th>
                    <th data-field="description" data-visible="false" >Descripción</th>
                    <th data-width='80' data-halign="right" data-align="right" data-formatter="actionFormatter" data-events="actionEvents">Acción</th>
                </tr>
            </thead>
            <tbody>
                <% @products.each do |product| %>
                 <tr>
                     <td><%= product.id%></td>
                     <td><%= product.tradename%></td>
                     <td><%= product.maker%></td>
                     <td><%= product.unit_of_measurement.abbreviation%></td>                    
                     <td><%= number_with_precision(product.price, :precision => 0, :delimiter => '.' ) %></td>
                     <td><%= product.dosage%></td>
                     <td><%= number_with_precision(product.cost_per_hectare, :precision => 0, :delimiter => '.' ) %></td>
                     <td><%= product.description%></td>
                  </tr>
                 <% end %>
             </tbody>
         </table>
     </div>
 </div>
 <input type="hidden" id="controller" value="<%= controller_name%>">
