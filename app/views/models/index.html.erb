
<div class="panel-body">
    <div class="table-responsive">
        <table data-width="100%"  
                data-flat="true"
                data-response-handler="flatJSON"
                data-search="true"                
                class="table  table-hover table-striped table-condensed display" 
                data-toggle="table"
                data-show-toggle="true"                
                data-show-refresh="false" 
                data-pagination="true" 
                onlyInfoPagination="false" 
                data-icons="icons" data-sort-name="code" data-sort-order="desc" 
                data-card-view="false">
                <thead>
                <tr>
                    <th style="widhth:0%" data-visible="false" data-field="id">Id</th> 
                    <th style="widhth:30%" data-sortable="true" data-field="brand_id">Marca</th> 
                    <th style="widhth:30%" data-sortable="true"  data-field="name">Modelo</th> 
                    <th style="widhth:30%" data-field="description">Descripción</th> 
                    <th  style="widhth:10%" data-halign="right" data-align="right" data-formatter="actionFormatter" data-events="actionEvents">Acción</th>
                </tr>
            </thead>
            <tbody>
                <% @models.each do |model| %>
                 <tr>
                     <td><%= model.id%></td>
                     <td><%= model.brand.name%></td>
                     <td><%= model.name %></td>
                     <td><%= model.description %></td>
                    
                 </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
<input type="hidden" id="controller" value="<%= controller_name%>">