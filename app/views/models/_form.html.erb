<div class="panel-body">
    <%=form_for @model, url: models_path, :html =>{ class: 'form-horizontal',id: "form_models", remote: true } do |f| %>
      <div class="col-sm-6 col-lg-8 col-lg-8">

          <div class="form-group">
              <%= f.label :brand_id, "Marca :" ,class: "control-label col-sm-2"%>
               <div class="col-sm-4">
                   <%= f.select :brand_id, options_for_select(@brands, f.object.brand_id), {}, { :class => 'form-control', :required => true }%>
               </div>
           </div>

           <div class="form-group">
               <%= f.label :name,"Modelo :", class: "control-label col-sm-2"%>
                <div class="col-sm-5">
                    <%= f.text_field :name, autofocus: true, class: "form-control upper_text", :required => true%>
                 </div>
             </div>
             <div class="form-group">
                 <%= f.label :description,"DescripciÃ³n :" ,class: "control-label col-sm-2"%>
                  <div class="col-sm-5">
                      <%= f.text_area :description, autofocus: true , class: "form-control"%>
                   </div>
               </div>

               <%= render('layouts/buttons')%>

           </div>
           <input type="hidden" id="controller" value="<%= controller_name%>">
          <% end %>
      </div>