<div class="panel-body">
    <%= form_for(@history_sale,html: {class: 'form-horizontal',id:'form_history_sales', remote:true}) do |f| %>
      <div class="col-xs-12 col-lg-8 col-sm-12">

          <div class="form-group">  
              <%= f.label :period,"Periodo :",class: "control-label col-sm-3" %>
               <div class="col-xs-12 col-md-12 col-sm-12 col-lg-4">
                   <%= f.text_field :period,autofocus: true , class: "form-control ", onkeyup: "this.value=this.value.toUpperCase()", :maxlength => "4"%>
                    <div class="help-block  with-errors"> <%= f.object.errors[:period].to_sentence if f.object.errors[:period] %></div>
                </div>
            </div>

            <div class="form-group">  
                <%= f.label :date,"Fecha :",class: "control-label col-sm-3" %>
                 <div class="col-xs-12 col-md-12 col-sm-12 col-lg-4">
                    <%= f.text_field :date,autofocus: true ,class: "form-control datepicker",:maxlength => "10", :required => true %>
                     
                    
                      <div class="help-block  with-errors"> <%= f.object.errors[:date].to_sentence if f.object.errors[:date] %></div>
                  </div>
            </div>

             <div class="form-group">  
                <%= f.label :quantity,"Cantidad:",class: "control-label col-sm-3" %>
                 <div class="col-xs-12 col-md-12 col-sm-12 col-lg-4">
                     <%= f.text_field :quantity,autofocus: true , class: "form-control ", onkeyup: "this.value=this.value.toUpperCase()", :maxlength => "20", :required => true %>
                      <div class="help-block  with-errors"> <%= f.object.errors[:quantity].to_sentence if f.object.errors[:quantity] %></div>
                </div>
            </div>

                <%= render('layouts/error_lists')%>

                <%= render('layouts/buttons')%>


            </div>
            <input type="hidden" id="controller" value="<%= controller_name%>">
           <% end %>
       </div>

