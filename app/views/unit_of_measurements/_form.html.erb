<div class="panel-body">
   <%=form_for @unit_of_measurement, url: unit_of_measurements_path,:html => { class: 'form-horizontal' } do |f| %>
         <div class="col-sm-12 col-xs-12">
            <div class="form-group">  
               <%= f.label :name,class: "control-label col-sm-3" %>
               <div class="col-sm-6">
                  <%= f.text_field :name,autofocus: true , class: "form-control upper_text" ,onblur: "this.value=this.value.toUpperCase()"  %>
                  <p class="help-block"> <%= f.object.errors[:name].to_sentence if f.object.errors[:name] %></p>
               </div>
            </div>

            <div class="form-group">  
                 <%= f.label :abbreviation,class: "control-label col-sm-3"  %>
                   <div class="col-sm-6">                                         
                       <%= f.text_field :abbreviation,autofocus: true , class: "form-control upper_text"  %>                                                
                     </div>
            </div>
            <div class="form-group">  
               <%= f.label :coefficient,class: "control-label col-sm-3"  %>
               <div class="col-sm-6">                                         
                  <%= f.text_area :coefficient,autofocus: true , class: "form-control"  %>                                                
               </div>
            </div>
            <%= render('layouts/error_lists')%>
            <%= render('layouts/buttons')%>
         </div>
      <input type="hidden" id="controller" value="<%= controller_name%>">
   <% end %>
</div>

           