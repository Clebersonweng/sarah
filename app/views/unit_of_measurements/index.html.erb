	<div class="table-responsive">
		<table data-width="100%"  
		data-flat="true"
		data-response-handler="flatJSON"
		data-search="true"                
		class="table table-hover table-striped table-condensed display" 
		data-toggle="table"
		data-show-toggle="true"                
		data-show-refresh="false" 
		data-pagination="true" 
		onlyInfoPagination="false" 
		data-icons="icons" data-sort-name="name" data-sort-order="desc" 
		data-card-view="false"
		>
		<thead>
			<tr>

				<th data-field="id">#</th> 
				<th data-field="name" >Nombre</th> 
				<th data-field="abbreviation" >Abreviación</th>                                      
				<th data-field="coefficient" >Coeficiente</th>                                      
				<th data-width='80' style="widhth:10%" data-halign="right" data-align="right" data-formatter="actionFormatter" data-events="actionEvents">Acción</th>
			</tr>
		</thead>
		<tbody>
			<% @unit_of_measurements.each do |units| %>
			<tr>
				<td><%= units.id%></td>
				<td><%= units.name%></td>
				<td><%= units.abbreviation %></td>    
				<td><%= units.coefficient %></td>    
				<td></td>    
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<input type="hidden" id="controller" value="<%= controller_name%>">

