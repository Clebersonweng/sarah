
<div class="panel-body">
    <%= form_for(@type_of_crop,html: {class: 'form-horizontal',id:'form_type_of_crops', remote:true}) do |f| %>
      <div class="col-xs-12 col-lg-8 col-sm-12">

            <div class="form-group">  
                <%= f.label :name,"Nombre:",class: "control-label col-sm-2" %>
                 <div class="col-xs-12 col-md-12 col-sm-12 col-lg-8">
                     <%= f.text_field :name,autofocus: true , class: "form-control ", onkeyup: "this.value=this.value.toUpperCase()", :maxlength => "20", :required => true %>
                      <div class="help-block  with-errors"> <%= f.object.errors[:name].to_sentence if f.object.errors[:name] %></div>
                  </div>
              </div>

              <div class="form-group">  
                  <%= f.label :variety, "Variedad:",class: "control-label col-sm-2"  %>
                   <div class="col-xs-12 col-md-12 col-sm-12 col-lg-8">                                         
                       <%= f.text_area :variety,autofocus: true , class: "form-control"  %>                                                
                    </div>
                </div>

                <%= render('layouts/error_lists')%>

                <div class="text-center">                                                              
                    <%= render('layouts/buttons')%>
                </div>

            </div>
            <input type="hidden" id="controller" value="<%= controller_name%>">
           <% end %>
       </div>


