<div class="panel-body">
   <%= form_for(@type_of_crop,html: {class: 'form-horizontal',id:'form_type_of_crops', remote:true,"data-type": "json",'data-model' => 'type_of_crop'}) do |f| %>
      <div class="col-xs-12 col-lg-8 col-sm-12">          
         <div class="form-group">  
            <%= f.label :name,"Nombre:",class: "control-label col-sm-3" %>
             <div class="col-xs-12 col-md-12 col-sm-12 col-lg-8">
                 <%= f.text_field :name,autofocus: true , class: "form-control ", onkeyup: "this.value=this.value.toUpperCase()", :maxlength => "20", :required => true %>
                  <div class="help-block  with-errors"> <%= f.object.errors[:name].to_sentence if f.object.errors[:name] %></div>
              </div>
         </div>
         <div class="form-group">  
           <%= f.label :variety_id, "Variedad:",class: "control-label col-sm-3"  %>
              <div class="col-xs-12 col-md-12 col-sm-12 col-lg-8">   
              <%= f.select :variety_id, options_for_select(@varieties, f.object.variety_id), {},
               { :class => 'form-control', :required => true }%>
              <span class="help-block"> <%= f.object.errors[:variety_id].to_sentence if f.object.errors[:variety_id] %></span>
                                   
             </div>
         </div>
         <%= render('layouts/buttons')%>
      </div>
      <input type="hidden" id="controller" value="<%= controller_name%>">
   <% end %>
</div>


