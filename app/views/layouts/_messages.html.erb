<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div  class="alert_sarah alert col-md-offset-2 alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>  fade">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= content_tag :div, msg, :id => "flash_#{name}"  "<i class='fa fa-star' aria-hidden='true'></i>" %>
    </div>
  <% end %>
<% end %>