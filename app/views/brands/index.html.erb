<div class="table-responsive">
   <table    
   id= "bt_brands"
   data-width="100%"
   data-height="540"
   class="table  table-hover table-striped table-condensed display"
   data-toggle="table" 
   data-search="true" 
   data-toolbar="toolbar1"
   data-show-toggle="true"
   data-show-refresh="false"
   data-pagination="true"
   onlyInfoPagination="false"
   data-icons="icons"
   data-sort-name="name"
   data-sort-order="desc" 
   data-card-view="false">
   <thead>
      <tr>
         <th style="widhth:0%" data-visible="true" class="hidden" data-field="id">Código</th>
         <th style="widhth:40%" data-sortable="true"  data-field="name">Nombre</th> 
         <th style="widhth:40%" data-field="description">Descripción</th> 
         <th style="widhth:10%" data-halign="right" data-align="right" data-formatter="actionFormatter" data-events="actionEvents">Acción</th>
      </tr>
   </thead>
   <tbody>
      <% @brands.each do |brand| %>
      <tr>
         <td><%= brand.id%></td>
         <td><%= brand.name%></td>
         <td><%= brand.description %></td>

      </tr>
      <% end %>
   </tbody>
</table>
</div>
<input type="hidden" id="controller" value="<%= controller_name%>">	