<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading"><h3 align="center">Brand</h3>
                <%=render 'layouts/submenu' %>
            </div>
            <div class="panel-body">
                <table data-toggle="table" data-url="brand"  data-show-refresh="true" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-pagination="true" data-sort-name="name" data-sort-order="desc">
                    <thead>
                        <tr>
                            <th data-field="id" data-sortable="true" data-checkbox="true">Item ID</th>
                            <th data-field="name">Name</th> 
                            <th data-field="description">Description</th> 
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @brands.each do |brand| %>
                          <tr>
                              <td><%= brand.id%></td>
                              <td><%= brand.name%></td>
                              <td><%= brand.description %></td>
                              <td class="col-md-1">
                                  <%= link_to edit_brand_path(brand) do %>
                                    <i class="fa fa-2x fa-edit"></i>
                                  <% end %>
                                  <%= link_to brand, method: :delete, data: { confirm: 'Are you sure?' }  do%>
                                    <i class="fa fa-2x fa-minus"></i>
                                  <% end %>
                              </td>
                          </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>