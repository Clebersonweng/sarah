<div class="panel-body">
    <div class="table-responsive">
          <table    data-width="100%"
                    class="table  table-hover table-striped table-condensed display"
                    data-toggle="table" 
                    data-search="true" 
                    data-toolbar="toolbar1"
                    data-show-toggle="true"
                    data-show-refresh="false"
                    data-pagination="true"
                    onlyInfoPagination="false"
                    data-icons="icons"
                    data-height="380"
                    data-sort-name="name"
                    data-sort-order="desc" 
                    data-card-view="false">
        <thead>
            <tr>
                <th data-visible="true" class="hidden" data-field="id">Código</th>
                <th class="col-xs-4 col-md-4 col-sm-4" data-sortable="true"  data-field="name">Nombre</th> 
                <th class="col-xs-6 col-md-2 col-sm-2 col-lg-6" data-field="description">Descripción</th> 
                <th data-halign="right" data-align="right" data-formatter="actionFormatter" data-events="actionEvents">Acción</th>
            </tr>
        </thead>
        <tbody>
            <% @brands.each do |brand| %>
             <tr>
                 <td><%= brand.id%></td>
                 <td><%= brand.name%></td>
                 <td><%= brand.description %></td>
                 
              </tr>
             <% end %>
         </tbody>
     </table>
 </div>
 <input type="hidden" id="controller" value="<%= controller_name%>">