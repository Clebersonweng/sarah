  <div class="panel-body">
   <%= form_for(@type_of_service,html: {class: 'form-horizontal', id: "form_type_of_services", remote: true}) do |f| %>
          <div class="col-sm-6 col-lg-8 col-lg-8">
              <div class="form-group">  
                  <%= f.label :name,"Nombre :",class: "control-label col-sm-3" %>
                    <div class="col-sm-6">
                        <%= f.text_field :name,autofocus: true , class: "form-control " ,onblur: "this.value=this.value.toUpperCase()"  %>
                          <div class="help-block"> <%= f.object.errors[:name].to_sentence if f.object.errors[:name] %></div>
                      </div>
                  </div>

                  <div class="form-group">  
                      <%= f.label :price,"Precio :",class: "control-label col-sm-3"  %>
                        <div class="col-sm-6">                                         
                            <%= f.text_field :price,autofocus: true , class: "form-control"  %>
                              <div class="help-block"> <%= f.object.errors[:price].to_sentence if f.object.errors[:price] %></div>
                          </div>
                      </div>
                      <div class="form-group">  
                          <%= f.label "U M :", class:"control-label col-sm-3"  %>
                            <div class="col-sm-6">                                         
                                <%= f.select :unit_of_measurement_id, options_for_select(@unit_measurements, f.object.unit_of_measurement_id), {},
                                      { :class => 'form-control', :required => true }%>
                                  <div class="help-block"> <%= f.object.errors[:unit_of_measurement_id].to_sentence if f.object.errors[:unit_of_measurement_id] %></div>
                              </div>
                          </div>
                          <div class="form-group">  
                              <%= f.label "DescripciÃ³n :",class: "control-label col-sm-3"  %>
                                <div class="col-sm-6">                                         
                                    <%= f.text_area :description,autofocus: true , class: "form-control"  %> 
                                     <div class="help-block"> <%= f.object.errors[:description].to_sentence if f.object.errors[:description] %></div>
                                  </div>
                          </div>
                          <%= render('layouts/error_lists')%>
                          <%= render('layouts/buttons')%>
        </div>
                         
                        <% end %>
                    </div>
