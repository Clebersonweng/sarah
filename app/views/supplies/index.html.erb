<p id="notice"><%= notice %></p>

<h1>Supplies</h1>

<table>
  <thead>
    <tr>
      <th>Maker</th>
      <th>U.M</th>
      <th>Tradename</th>
      <th>Price</th>
      <th>Dosage</th>
      <th>Cost per hectare</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @supplies.each do |supply| %>
      <tr>
        <td><%= supply.maker %></td>
        <td><%= supply.unit_of_measurement.abbreviation %></td>
        <td><%= supply.tradename %></td>
        <td><%= supply.price %></td>
        <td><%= supply.dosage %></td>
        <td><%= supply.cost_per_hectare %></td>
        <td><%= supply.description %></td>
        <td><%= link_to 'Show', supply %></td>
        <td><%= link_to 'Edit', edit_supply_path(supply) %></td>
        <td><%= link_to 'Destroy', supply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

