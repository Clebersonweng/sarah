<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f|  %>
  <div class="form-group">
    <%= f.label :email,class: "control-label col-xs-12 col-lg-3 col-xs-offset-1" %>
    <div class="col-md-8">
        <%= f.email_field :email, autofocus: true , class: "form-control"%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password,"Contrasena",class: "control-label col-xs-12 col-lg-3 col-xs-offset-1" %>
    <div class="col-md-8">
        <%= f.password_field :password, autocomplete: "off" , class: "form-control"%>
    </div>
  </div>
  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
        <%= f.label :remember_me,"Recordarme", class: "control-label col-xs-7 col-lg-3"%>
        <div class="col-xs-5 col-lg-4">
             <%= f.check_box :remember_me%>
        </div>
    </div>

  <% end -%>
    <div class="control-group col-xs-offset-4">
    <div class="controls">
        <button type="submit" class="btn btn-primary">Ingresar</button>
        <button type="reset" class="btn btn-danger">Cancelar</button>
    </div>
  </div>
<% end %>



