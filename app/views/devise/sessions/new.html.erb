<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f|  %>
 
 <div class="col-sm-12">
   <div class="form-group">
      <%= f.label :email,class: "control-label col-xs-12 col-lg-3 col-xs-offset-1" %>
       <div class="col-md-8">
           <%= f.email_field :email, autofocus: true , class: "form-control"%>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :password,"Contrasena",class: "control-label col-xs-12 col-lg-3 col-xs-offset-1" %>
         <div class="col-md-8">
             <%= f.password_field :password, class: "form-control"%>
          </div>
      </div>

      <% if devise_mapping.rememberable? %>
       <div class="form-group">
           <%= f.label :remember_me,"Recordarme", class: "col-xs-12 col-lg-4 col-lg-offset-1"%>
            <div class="text-center col-lg-offset-3">
                <%= f.check_box :remember_me%>
            </div>
        </div>
       <% end -%>

       <div class="text-center">
           <div class="controls">
               <button type="reset" class="btn btn-danger">Cancelar</button>
               <button type="submit" class="btn btn-success">Ingresar</button>

           </div>
       </div>
 </div>
<% end %>



