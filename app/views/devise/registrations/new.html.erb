<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email ,class: "control-label col-xs-2 col-xs-offset-1"%>
    <div class="col-md-8">
    <%= f.email_field :email, autofocus: true , class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password,class: "control-label col-xs-2 col-xs-offset-1"%>
    
    <div class="col-md-8">
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :pass_confirm ,class: "control-label col-xs-2 col-xs-offset-1"%>
      <div class="col-md-8">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  

  <div class="form-group">
  <%= f.label :own_machine,class: "control-label col-xs-2 col-xs-offset-1" %>
   <div class="col-md-8">
   <%=f.check_box :own_machine, {}, false%>
   </div>
  </div>
  <div class="control-group col-xs-offset-4">
  
   <div class="controls">
    <button type="submit" class="btn btn-primary">Guardar</button>
    <button type="reset" class="btn btn-danger">Cancelar</button>
    </div>
 
  </div>
<% end %>

<%= render "devise/shared/links" %>
