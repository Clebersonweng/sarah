<span class=" col-xs-offset-1"></span>
<fieldset >
   <legend>Registrarse</legend>
</fieldset>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>

   <div class="form-group">
      <%= f.label :email ,"Email: ",class: "control-label col-sm-3 col-md-3 col-xs-offset-1"%>
      <div class="col-md-7 col-sm-7">
         <%= f.email_field :email, autofocus: true , class: "form-control"%>
          <div class="help-block"> <%= f.object.errors[:email].to_sentence if f.object.errors[:email] %></div>
      </div>
   </div>

   <div class="form-group">
      <%= f.label :password,"Contraseña: ",class: "control-label col-sm-3 col-md-3 col-xs-offset-1"%>
      <div class="col-md-7 col-sm-7">
         <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          <div class="help-block"> <%= f.object.errors[:password].to_sentence if f.object.errors[:password] %></div>
      </div>
   </div>

   <div class="form-group">
      <%= f.label :pass_confirm ,"Confirmar Contraseña: ",class: "control-label col-sm-3 col-md-3 col-xs-offset-1"%>
      <div class="col-md-7 col-sm-7">
         <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          <div class="help-block"> <%= f.object.errors[:password_confirmation].to_sentence if f.object.errors[:password_confirmation] %></div>
      </div>
   </div>
   <div class="form-group hide">
      <%= f.label :own_machine,class: "control-label col-xs-2 col-xs-offset-1" %>
      <div class="col-md-8">
         <%= f.check_box :own_machine, {}, false %>
      </div>
   </div>

   <div class="control-group col-xs-offset-4">
      <div class="controls">
         <button type="reset" class="btn btn-danger">Cancelar</button>
         <button type="submit" class="btn btn-primary">Guardar</button>
      </div>
   </div>


<% end %>

<input type="hidden" id="controller" value="<%= controller_name%>">
<%= render "devise/shared/links" %>
