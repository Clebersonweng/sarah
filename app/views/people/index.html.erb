<div class="panel-body">
    <div class="table-responsive">
        <table data-width="100%"  
        data-flat="true"
        data-response-handler="flatJSON"
        data-search="true"                
        class="table table-hover table-striped table-condensed display" 
        data-toggle="table"
        data-show-toggle="true"                
        data-show-refresh="false" 
        data-pagination="true" 
        onlyInfoPagination="false" 
        data-icons="icons" data-sort-name="code" data-sort-order="desc" 
        data-card-view="false"
        >
        <thead>
            <tr>
                <th style="widhth:0%" data-visible="false" data-field="id">Id</th> 
                <th style="widhth:10%" data-sortable="true" data-field="name">Nombre</th> 
                <th style="widhth:15%" data-sortable="true"  data-field="lastname">Apellido</th> 
                <th style="widhth:15%" data-halign="left" data-align="right" data-field="salary">Sueldo</th> 
                <th style="widhth:10%" data-field="ruc_ci">RUC/CI</th> 
                <th style="widhth:10%" data-field="address">Dirección</th> 
                <th style="widhth:10%" data-field="phone">Teléfono</th> 
                <th style="widhth:10%" data-field="birthday">Cumpleaños</th> 
                <th style="widhth:10%" data-field="gender">Género</th> 
                <th data-width='80' data-halign="right" data-align="right" data-formatter="actionFormatter" data-events="actionEvents">Acción</th>
            </tr>
        </thead>
        <tbody>
            <% @people.each do |person| %>
            <tr>
                <td><%= person.id %></td>
                <td><%= person.name %></td>
                <td><%= person.lastname %></td>
                <td><%= person.salary %></td>
                <td><%= person.ruc_ci %></td>
                <td><%= person.address %></td>
                <td><%= person.phone %></td>
                <td><%= person.birthday %></td>
                <td><%= person.gender %></td>
                
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
</div>

<input type="hidden" id="controller" value="<%= controller_name%>">



