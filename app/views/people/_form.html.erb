    <%= form_for( @person, html: {class: 'form-horizontal', id: 'form_people', remote:true,"data-type": "json",'data-model' => 'person'}) do |f| %>
      
   <div class="col-xs-12 col-lg-6 col-sm-12 col-md-6">
          
      <div class="form-group">  
         <%= f.label :name,"Nombre :",class: "col-sm-3 control-label" %>
         <div class="col-xs-12 col-md-12 col-sm-12 col-lg-8">
            <%= f.text_field :name,autofocus: true , class: "form-control" ,onblur: "this.value=this.value.toUpperCase()" ,:pattern => "[a-zA-Z-0-9 ]+", :"data-error"=>"Verifique si el dato esta correcto.", :maxlength => "40", :required => true  %>
            <div class="help-block"> <%= f.object.errors[:name].to_sentence if f.object.errors[:name] %></div>
         </div>
      </div>
      <div class="form-group">  
        <%= f.label :lastname,"Apellido :",class: "col-sm-3 control-label" %>
         <div class="col-xs-12 col-md-12 col-sm-12 col-lg-8">
             <%= f.text_field :lastname,autofocus: true , class: "form-control" ,:pattern => "[a-zA-Z-0-9 ]+", :maxlength => "40", :required => true  %>
              <div class="help-block"> <%= f.object.errors[:lastname].to_sentence if f.object.errors[:lastname] %></div>
          </div>
      </div>

      <div class="form-group">  
        <%= f.label :salary,"Sueldo (hs):",class: "col-sm-3 control-label" %>
         <div class="col-xs-12 col-md-12 col-sm-12 col-lg-5">
             <%= f.text_field :salary,autofocus: true , class: "form-control" ,:pattern => "[a-zA-Z-0-9 ]+", :maxlength => "40", :required => true  %>
              <div class="help-block"> <%= f.object.errors[:salary].to_sentence if f.object.errors[:salary] %>
          </div>
         </div>
      </div>

      <div class="form-group">  
           <%= f.label :gender,'Género :',class: "col-sm-3 control-label" %>
           <div class="col-xs-12 col-md-12 col-sm-12 col-lg-4">
                <%= f.select :gender, options_for_select(['Masculino', 'Feminino']), { prompt: '', selected: @selected }, { class: 'form-control' } %> 
              <div class="help-block"> 
                <%= f.object.errors[:gender].to_sentence if f.object.errors[:gender]    %></div>
            </div>
      </div>      
   </div>


   <div class="col-xs-12 col-lg-6 col-sm-12 col-md-6">
            <div class="form-group">  
                <%= f.label :ruc_ci,"Ruc o Cédula :",class: "col-sm-6 control-label" %>
                <div class="col-xs-12 col-md-12 col-sm-12 col-lg-5">
                   <%= f.text_field :ruc_ci,autofocus: true , class: "form-control" ,:pattern => "[a-zA-Z-0-9 ]+", :maxlength => "40", :required => true  %>
                    <div class="help-block"> <%= f.object.errors[:ruc_ci].to_sentence if f.object.errors[:ruc_ci] %></div>
                </div>
            </div> 

            <div class="form-group">  
                <%= f.label :address,"Dirección :",class: "col-sm-3 control-label" %>
                <div class="col-xs-12 col-md-12 col-sm-12 col-lg-8">
                     <%= f.text_field :address,autofocus: true , class: "form-control" ,:pattern => "[a-zA-Z-0-9 ]+", :maxlength => "40", :required => true  %>
                     <div class="help-block"> <%= f.object.errors[:address].to_sentence if f.object.errors[:address] %></div>
                </div>
            </div> 

            <div class="form-group">  
                <%= f.label :phone,"Teléfono :",class: "col-sm-6 control-label" %>
                 <div class="col-xs-12 col-md-12 col-sm-12 col-lg-5">
                     <%= f.text_field :phone,autofocus: true , class: "form-control" ,:pattern => "[a-zA-Z-0-9 ]+", :maxlength => "40", :required => true  %>
                      <div class="help-block"> <%= f.object.errors[:phone].to_sentence if f.object.errors[:phone] %></div>
                </div>
            </div>

            <div class="form-group">  
                 <%= f.label :birthday,'Cumpleanos :',class: "col-sm-7 control-label" %>
                 <div class="col-xs-12 col-md-12 col-sm-12 col-lg-4">
                     <%= f.text_field :birthday,autofocus: true , class: "form-control" ,:pattern => "[a-zA-Z-0-9 ]+", :maxlength => "40", :required => true  %>
                    <div class="help-block"> <%= f.object.errors[:birthday].to_sentence if f.object.errors[:birthday]    %></div>
                  </div>
            </div>
            <%= f.hidden_field :user_id,autofocus: true , class: "form-control" ,:pattern => "[a-zA-Z-0-9 ]+", :maxlength => "40", :required => true, :value => "#{current_user.id}" %>
                      <div class="help-block"> <%= f.object.errors[:user_id].to_sentence if f.object.errors[:user_id] %></div>     
   <input type="hidden" id="controller" value="<%= controller_name%>">
   </div>
<%end%>
