<div class="panel-body">
    <div class="table-responsive">
        <table class="table table-striped table-condensed" data-url="farming_plots" data-toggle="table" data-show-columns="true" data-search="true" data-pagination="true" data-sort-name="name" data-sort-order="asc">
            <thead>
                <tr>
                    <th data-field="code" data-sortable="true" >Codigo</th> 
                    <th data-field="name" data-sortable="true" >Nombre</th>                            
                    <th data-field="area"  data-sortable="true">Area</th>
                    <th data-field="people_id" class="hidden-xs">Encargado</th>                           
                    <th data-field="description" class="hidden-xs">Descripcion</th>
                    <th class="text-right">Accion</th>
                </tr>
            </thead>
            <tbody>
                <% if (@farming_plots == nil )%>
                  <tr><td colspam="7">no cuenta con datos</td></tr>
                <%else%>
                  <%= render "line"%>
                <%end%>
            </tbody>
        </table>
        <%= render 'dialog' %>
    </div>
</div>
