<div class="panel-heading clearfix ">
    <h5 class="panel-title pull-left" style="padding-top: 7.5px;">Parcela Agricola</h5>
    <div class="input-group col-xs-4 col-md-2 pull-right">
        <input type="text" id="" class="form-control input-medium" placeholder=" buscar">
    </div>
</div>
<div class="panel-body">
    <div class="table-responsive">
        <table class="table table-striped table-condensed "data-toggle="table" data-url="farming_plots"  data-show-refresh="true" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-pagination="true" data-sort-name="name" data-sort-order="desc">
            <thead>
                <tr>
                    <th data-field="code" >Codigo</th> 
                    <th data-field="name" >Nombre</th>                            
                    <th data-field="area"  data-sortable="true">Area</th>
                    <th data-field="type_of_crop_id" > Tipo de Cultivo</th>
                    <th data-field="people_id">Manager</th>                           
                    <th data-field="description">Description</th>
                    <th class="text-right">Accion</th>
                </tr>
            </thead>
            <tbody>
                <% @farming_plots.each do |farm| %>
                  <tr>                      
                      <td><%= farm.code %></td>
                      <td><%= farm.name %></td>
                      <td><%= farm.area %></td>
                      <td><%= farm.type_of_crop.name %></td>
                      <td><%= farm.person.name %></td>
                      <td class="hidden-xs"><%= farm.description %></td>
                      <td class="text-right">
                          <%= link_to edit_farming_plot_path(farm) do %>
                            <i class="fa fa-2x fa-edit"></i>
                          <% end %>
                          <%= link_to    farm, method: :delete, data: { confirm: 'Are you sure?' }  do%>
                            <i class="fa fa-2x fa-minus"></i>
                          <% end %>
                      </td>

                  </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>