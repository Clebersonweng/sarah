<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading"><h3 align="center"> Farming Plot</h3>
                <%=render 'layouts/submenu' %>
            </div>

            <div class="panel-body">
                <%=form_for @farming_plot, url: farming_plots_path,:html => { class: 'form-horizontal' } do |f| %>
                    <div class="col-sm-6 col-sm-offset-2">
                        <div class="form-group">  
                            <%= f.label :code, class: "control-label col-sm-2 col-sm-offset-1"%>
                              <div class="col-sm-4">
                                  <%= f.text_field :code,autofocus: true , class: "form-control"   %>
                                </div>
                            </div>

                            <div class="form-group">  
                                <%= f.label :name,class: "control-label col-sm-2 col-sm-offset-1" %>
                                  <div class="col-sm-4">
                                      <%= f.text_field :name,autofocus: true , class: "form-control" ,onblur: "this.value=this.value.toUpperCase()"  %>
                                    </div>
                                </div>

                                <div class="form-group">  
                                    <%= f.label :area,class: "control-label col-sm-2 col-sm-offset-1"  %>
                                      <div class="col-sm-2">
                                          <div class="input-group">
                                              <%= f.text_field :area,autofocus: true , class: "form-control"  %>
                                                <span class="input-group-addon" id="basic-addon2">Ha</span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">  
                                        <%= f.label :type_of_crop_id, class: "control-label col-sm-2 col-sm-offset-1" %>
                                          <div class="col-sm-4">
                                              <%= f.select :type_of_crop_id, options_for_select(@type_of_crops, :selected => f.object.type_of_crop_id,:class => "form-control", :include_blank => true) %>
                                          </div>                             
                                      </div>

                                      <div class="form-group">  
                                          <%= f.label  "Encargado",class: "control-label col-sm-2 col-sm-offset-1"  %>
                                            <div class="col-sm-4">
                                                <%= f.select :person_id, options_for_select(@person, :selected => f.object.person_id,:class => "form-control", :include_blank => true) %>                      
                                            </div>
                                        </div>



                                        <div class="form-group">  
                                            <%= f.label :description,class: "control-label col-sm-2 col-sm-offset-1"  %>
                                              <div class="col-sm-4">
                                                  <%= f.text_area :description,autofocus: true , class: "form-control" %>
                                                </div>
                                            </div>

                                            <div class="control-group col-sm-offset-3">
                                                <div class="controls">
                                                    <button type="reset" class="btn btn-danger">Cancel</button>
                                                    <button type="submit" class="btn btn-primary">Save</button>

                                                  <% end %>
                                              </div>
                                          </div>
                                      </div>