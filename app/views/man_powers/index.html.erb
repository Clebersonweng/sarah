   <div class="table-responsive">
      <table data-width="100%"  
         data-flat="true"
         data-response-handler="flatJSON"
         data-search="true"                
         class="table table-hover table-striped table-condensed display" 
         data-toggle="table"
         data-show-toggle="true"                
         data-show-refresh="false" 
         data-pagination="true" 
         onlyInfoPagination="false" 
         data-icons="icons" data-sort-name="code" data-sort-order="desc" 
         data-card-view="false"
      >
         <thead>
            <tr>
               <th data-field="id" data-checkbox="false">#</th>
               <th data-field="program_production_id">Parcela</th>
               <th data-field="total_hours_needed" >Total de horas necesárias</th> 
               <th data-field="total" >Monto Total</th>  
               <th data-formatter="actionFormatter" data-align="right" data-events="actionEvents">Acción</th>
            </tr>
         </thead>
         <tbody>
            <% @man_powers.each do |man_power| %>
               <tr>
                  <td><%= man_power.id%></td>
                  <td><%= man_power.program_production.estimate_sale.farming_plot.name %></td>
                  <td><%= number_with_precision( man_power.total_hours_needed, :precision => 0, :delimiter => '.' ) %></td>
                  <td><%= number_with_precision( man_power.total, :precision => 0, :delimiter => '.' ) %></td>                  
               </tr>
            <% end %>
         </tbody>
      </table>
   </div>
<input type="hidden" id="controller" value="<%= controller_name%>">
