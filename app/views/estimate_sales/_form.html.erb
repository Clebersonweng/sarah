<div class="panel-heading clearfix ">
    <h5 class="panel-title pull-left" style="padding-top: 7.5px;"> Estimacion de ventas </h5>   
</div>
<div class="panel-body">
                        <%=form_for @estimate_sale, url: estimate_sales_path,:html => { class: 'form-horizontal' } do |f| %>
                            <div class="row">
                                <div class="col-xs-7 col-xs-offset-1">
                                    <div class="form-group">
                                        <label for="ejemplo_password_3" class="col-xs-1 control-label">Cod. Cuenta</label>
                                        <div class="col-xs-3">
                                            <input class="form-control"/>
                                        </div>

                                        <label for="ejemplo_password_3" class="col-xs-1 control-label">Descrip.</label>
                                        <div class="col-xs-3">
                                            <%= f.select :chart_of_account_id, options_for_select(@charts, f.object.chart_of_account_id), {}, { :class => 'form-control' } %>
                                            <p class="help-block"> <%= f.object.errors[:chart_of_account_id].to_sentence if f.object.errors[:chart_of_account_id] %></p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        <div class="col-xs-3  "></div>
                            <div class="col-xs-8  ">

                                <div class="form-group">
                                    <label for="ejemplo_password_3" class="col-sm-1 control-label">Fecha</label>
                                    <div class="col-sm-3">
                                        <%= f.text_field :date, autofocus: true , class: "form-control datepicker" %>
                                          <p class="help-block"> <%= f.object.errors[:date].to_sentence if f.object.errors[:date] %></p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label for="ejemplo_password_3" class="col-sm-1 control-label">Parcela Agr.</label>
                                      <div class="col-sm-4">
                                          <%= f.select :farming_plot_id, options_for_select(@farming_plots, f.object.farming_plot_id), {}, { :class => 'form-control', :include_blank => 'ELEGIR' } %>
                                          <p class="help-block"> <%= f.object.errors[:farming_plot_id].to_sentence if f.object.errors[:farming_plot_id] %></p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label for="ejemplo_password_3" class="col-sm-1 control-label">Est. Produccion</label>
                                      <div class="col-sm-2">
                                          <%= f.text_field :estimate_production,  autofocus: true , class: "form-control" %>

                                        </div>
                                        <a type="button" class="btn btn-primary" id="openHistory">Cargar Historico</a>
                                    </div>

                                    <div class="form-group">
                                        <label for="ejemplo_password_3" class="col-sm-1 control-label">Total Prod.</label>
                                        <div class="col-sm-4">
                                            <%= f.text_field :total_production,  autofocus: true , class: "form-control" %>
                                          </div>
                                      </div>
                                      <div class="form-group">
                                          <label for="ejemplo_password_3" class="col-sm-1 control-label">Precio</label>
                                          <div class="col-sm-4">
                                              <%= f.text_field :price,  autofocus: true , class: "form-control"%>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="ejemplo_password_3" class="col-sm-1 control-label">Ingreso Bruto</label>
                                            <div class="col-sm-4">
                                                <%= f.text_field :gross_sale,  autofocus: true , class: "form-control" %>
                                              </div>
                                          </div>
                                          <div class="form-group ">
                                              <div class="col-sm-offset-2">
                                                  <button type="reset" class="btn btn-danger">Cancelar</button>
                                                  <button type="submit" class="btn btn-primary">Guardar</button>
                                              </div>
                                          </div>

                                      </div>	
                                  
                                <%end%>

                            </div>
                        </div>
                    </div>  
                </div> 
            </div>
            
            
            </body>
            </html>
