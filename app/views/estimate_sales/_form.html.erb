<div class="panel-body">
    <%= form_for(@estimate_sale,html: {class: 'form-horizontal', :"data-toggle"=>"validator", remote:true}) do |f| %>

        <div class="col-xs-12 col-lg-8  ">
            <div class="form-group">
                <label for="ejemplo_password_3" class="col-sm-1 control-label">Codigo</label>
                <div class="col-sm-2">
                    <%= f.text_field :code, autofocus: true,:type=>"text", class: "form-control", :readonly => "true",:placeholder =>"automatico"%>
                      <p class="help-block"> <%= f.object.errors[:code].to_sentence if f.object.errors[:code] %></p>
                  </div>
              </div>
              <div class="form-group">
                  <label for="ejemplo_password_3" class="col-sm-1 control-label">Fecha</label>
                  <div class="col-sm-4">
                      <%= f.date_field :date, autofocus: true,:type=>"date", class: "form-control datepicker",:value => Time.now.strftime('%Y-%m-%d'),:min => Time.now.strftime('%Y-%m-%d'), :required => true%>
                        <p class="help-block"> <%= f.object.errors[:date].to_sentence if f.object.errors[:date] %></p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-1 control-label">Parcela Agr.</label>
                    <div class="col-sm-4 text-center">
                        <%= f.select :farming_plot_id, options_for_select(@farming_plots, f.object.farming_plot_id), {}, { :class => 'form-control', :required => true }%>
                        <p class="help-block"> <%= f.object.errors[:farming_plot_id].to_sentence if f.object.errors[:farming_plot_id] %></p>
                    </div>
                </div>
                <div class="form-group">
                    <label for="ejemplo_password_3" class="col-sm-1 control-label">Tipo Cult.</label>
                    <div class="col-sm-4">
                        <%= f.select :type_of_crop_id, options_for_select(@type_of_crops, f.object.type_of_crop_id), {}, { :class => 'form-control', :include_blank => 'ELEGIR', :required => true }%>
                        <p class="help-block"> <%= f.object.errors[:type_of_crop_id].to_sentence if f.object.errors[:type_of_crop_id] %></p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-1 control-label">Estim. Prod.</label>
                    <div class="col-sm-3">
                        <%= f.text_field :estimate_production, input_html: { min: '3', max: '5' },:pattern => "[0-9]+" ,size: 5,:"data-error"=>"Verifique si el dato esta correcto.", autofocus: true , class: "form-control",:readonly=>true, :required => true,:placeholder =>"cantidad producida" %>
                      </div>
                      <div class="col-xs-3">
                          <a type="button" class="btn btn-primary btn-sm disabled" id="openHistory" disabled>Cargar</a>
                      </div>
                      <p class="help-block"> <%= f.object.errors[:estimate_production].to_sentence if f.object.errors[:estimate_production] %></p>
                  </div>

                  <div class="form-group">
                      <label for="ejemplo_password_3" class="col-sm-1 control-label">Total Prod.</label>
                      <div class="col-sm-4">
                          <%= f.text_field :total_production,  autofocus: true , class: "form-control",:readonly => "true", :required => true %>
                        </div>
                        <p class="help-block"> <%= f.object.errors[:total_production].to_sentence if f.object.errors[:total_production] %></p>

                    </div>
                    <div class="form-group">
                        <label for="price" class="col-sm-1 control-label">Precio</label>
                        <div class="col-sm-4">
                            <%= f.text_field :price,autofocus: true ,input_html: { min: '3', max: '15' }, class: "form-control",:pattern => "[0-9]+", :required => true%>
                          </div>
                          <p class="help-block"> <%= f.object.errors[:price].to_sentence if f.object.errors[:price] %></p>

                      </div>
                      <div class="form-group">
                          <label for="ejemplo_password_3" class="col-sm-1 control-label">Ingreso Bruto</label>
                          <div class="col-sm-4">
                              <%= f.text_field :gross_sale,  autofocus: true , class: "form-control",:readonly =>true, :required => true %>
                            </div>
                            <p class="help-block"> <%= f.object.errors[:gross_sale].to_sentence if f.object.errors[:gross_sale] %></p>
                        </div>

                        <div class="col-xs-10 col-md-4 col-md-offset-1">                                                              
                            <% if controller.action_name == "edit" ||  controller.action_name == "update" %>
                              <%= link_to "../../estimate_sales", :controller => "estimate_sales", :action => "index", :type => "button", :class =>"btn btn-danger" do  %>                              
                                Cancelar                       
                              <%end%>  
                            <%else%>
                              <button type="reset" class="btn btn-danger btn-space" >Cancelar</button>

                            <% end%>
                            <% if controller.action_name == "new"  ||  controller.action_name == "create"%>
                              <button type="submit" class="btn btn-primary">Guardar</button>
                            <%else%>
                              <button type="submit" class="btn btn-primary">Actualizar</button>
                            <% end%>                           
                        </div>

          </div>
     <%end%>
    </div>
  </body>
</html>