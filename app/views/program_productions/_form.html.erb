  <div id="error_explanation">
      <h2><%= pluralize(program_production.errors.count, "error") %> prohibited this program_production from being saved:</h2>

      <ul>
          <% program_production.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
      </ul>
