
<%= form_for(@fuel,html: {class: 'form-horizontal',id:'form_fuels', remote:true,"data-type": "json",'data-model' => 'fuel'}) do |f| %>
		<div class="form-group">  
			<%= f.label :name,class: "control-label col-sm-3" %>
			<div class="col-sm-4">
				<%= f.text_field :name,autofocus: true , class: "form-control " ,onblur: "this.value=this.value.toUpperCase()"  %>
				<span class="help-block"> <%= f.object.errors[:name].to_sentence if f.object.errors[:name] %></span>   
			</div>
		</div>

		<div class="form-group">  
			<%= f.label :price,class: "control-label col-sm-3"  %>
			<div class="col-sm-4">                                         
				<%= f.text_field :price,autofocus: true , class: "form-control"  %>  
				<span class="help-block"> <%= f.object.errors[:price].to_sentence if f.object.errors[:price] %></span>   
			</div>
		</div>
		<div class="form-group">  
			<%= f.label :description,class: "control-label col-sm-3"  %>
			<div class="col-sm-4">                                         
				<%= f.text_area :description,autofocus: true , class: "form-control"  %> 
				<span class="help-block"> <%= f.object.errors[:description].to_sentence if f.object.errors[:description] %></span>   

			</div>
		</div>
<% end %>
<input type="hidden" id="controller" value="<%= controller_name%>">









